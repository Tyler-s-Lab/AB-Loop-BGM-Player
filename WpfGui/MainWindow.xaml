<Window x:Class="WpfGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="600" MinHeight="400" AllowDrop="True" Drop="Window_Drop">
    <StackPanel>
        <Rectangle Height="30"/>
        <Button Content="Open File" Height="50" MinWidth="120" Margin="50,0,50,0" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" FontStyle="Italic" Click="Button_Click_Open"/>
        <Rectangle Height="30"/>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Ready" FontFamily="Cascadia Mono" FontSize="24" Margin="30,0" MinHeight="60"/>
        <Rectangle Height="30"/>
        <Grid Margin="30,0">
            <TextBlock x:Name="timeCurrent" HorizontalAlignment="Left" Text="00:00.0" FontSize="24" FontFamily="Consolas"/>
            <TextBlock x:Name="timeDuration" HorizontalAlignment="Right" Text="00:00.0" FontSize="24" FontFamily="Consolas"/>
        </Grid>
        <Slider x:Name="progressSlider" Minimum="0" Margin="30,0" Value="0" Thumb.DragStarted="ProgressSlider_DragStarted" Thumb.DragCompleted="ProgressSlider_DragCompleted" PreviewMouseDown="ProgressSlider_MouseDown"/>
        <Rectangle Height="30"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Play" Click="Button_Click_Play" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="90" Height="40" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" FontStyle="Italic"/>
            <Button Content="Pause" Click="Button_Click_Pause" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="90" Height="40" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" FontStyle="Italic"/>
            <Button Content="Stop" Click="Button_Click_Stop" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="90" Height="40" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" FontStyle="Italic"/>
        </Grid>
    </StackPanel>
</Window>
